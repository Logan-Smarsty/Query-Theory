<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1a5e"
    android:textAlignment="center"
    tools:context=".StartScreen"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/description"
        android:layout_width="368dp"
        android:layout_height="151dp"
        android:lineSpacingExtra="8sp"
        android:text="Query Theory is a a quizzing app that rapidly asks you questions to keep up a rhythm while testing your memory."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="410dp"
        android:layout_height="44dp" />

    <Button
        android:id="@+id/start_Going"
        android:layout_width="193dp"
        android:layout_height="87dp"
        android:backgroundTint="#41e5ed"
        android:text="Start Learning"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="371dp"
        android:layout_height="338dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.587"
        app:srcCompat="@drawable/query_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>